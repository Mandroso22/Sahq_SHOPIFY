<footer class="footer full-width">
  <div class="footer__container">
    <!-- Newsletter Section -->
    <div class="footer__newsletter">
      <h3 class="footer__newsletter-title">Stay in the loop</h3>
      <p class="footer__newsletter-description">Get the latest updates on new products and upcoming sales.</p>
      
      {% if section.settings.show_newsletter %}
        <form class="footer__newsletter-form" action="/contact#contact_form" method="post">
          <div class="footer__newsletter-input-group">
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Enter your email"
              class="footer__newsletter-input"
              required
            >
            <button type="submit" class="footer__newsletter-button">
              Subscribe
            </button>
          </div>
        </form>
      {% endif %}
    </div>

    <!-- Main Footer Content -->
    <div class="footer__main">
      <!-- Company Info -->
      <div class="footer__column">
        <h4 class="footer__column-title">Company</h4>
        <ul class="footer__links">
          {% if section.settings.company_menu.links %}
            {% for link in section.settings.company_menu.links %}
              <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li><a href="/pages/about" class="footer__link">About Us</a></li>
            <li><a href="/pages/careers" class="footer__link">Careers</a></li>
            <li><a href="/pages/press" class="footer__link">Press</a></li>
            <li><a href="/pages/contact" class="footer__link">Contact</a></li>
          {% endif %}
        </ul>
      </div>

      <!-- Customer Service -->
      <div class="footer__column">
        <h4 class="footer__column-title">Customer Service</h4>
        <ul class="footer__links">
          {% if section.settings.customer_service_menu.links %}
            {% for link in section.settings.customer_service_menu.links %}
              <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li><a href="/pages/help" class="footer__link">Help Center</a></li>
            <li><a href="/pages/shipping" class="footer__link">Shipping Info</a></li>
            <li><a href="/pages/returns" class="footer__link">Returns</a></li>
            <li><a href="/pages/size-guide" class="footer__link">Size Guide</a></li>
          {% endif %}
        </ul>
      </div>

      <!-- Legal -->
      <div class="footer__column">
        <h4 class="footer__column-title">Legal</h4>
        <ul class="footer__links">
          {% if section.settings.legal_menu.links %}
            {% for link in section.settings.legal_menu.links %}
              <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li><a href="/pages/privacy-policy" class="footer__link">Privacy Policy</a></li>
            <li><a href="/pages/terms-of-service" class="footer__link">Terms of Service</a></li>
            <li><a href="/pages/cookie-policy" class="footer__link">Cookie Policy</a></li>
            <li><a href="/pages/accessibility" class="footer__link">Accessibility</a></li>
          {% endif %}
        </ul>
      </div>

      <!-- Social Media -->
      <div class="footer__column">
        <h4 class="footer__column-title">Follow Us</h4>
        <div class="footer__social">
          {% if section.settings.show_social_icons %}
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="footer__social-link" aria-label="Facebook">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="footer__social-link" aria-label="Instagram">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_twitter_link != blank %}
              <a href="{{ settings.social_twitter_link }}" class="footer__social-link" aria-label="Twitter">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_youtube_link != blank %}
              <a href="{{ settings.social_youtube_link }}" class="footer__social-link" aria-label="YouTube">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="footer__bottom">
    <div class="footer__bottom-container">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      </div>
      
      <div class="footer__payment">
        {% if section.settings.show_payment_icons %}
          <div class="footer__payment-icons">
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: #ffffff;
    margin-top: 4rem;
  }

  .footer__container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 3rem var(--page-margin);
  }

  /* Newsletter Section */
  .footer__newsletter {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__newsletter-title {
    font-family: var(--font-heading--family);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #ffffff;
  }

  .footer__newsletter-description {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    font-size: 1rem;
  }

  .footer__newsletter-form {
    max-width: 400px;
    margin: 0 auto;
  }

  .footer__newsletter-input-group {
    display: flex;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 0.25rem;
  }

  .footer__newsletter-input {
    flex: 1;
    background: transparent;
    border: none;
    color: #ffffff;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    outline: none;
  }

  .footer__newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .footer__newsletter-button {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .footer__newsletter-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
  }

  /* Main Footer Content */
  .footer__main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer__column-title {
    font-family: var(--font-heading--family);
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link {
    display: block;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
    font-size: 0.9rem;
  }

  .footer__link:hover {
    color: #ffffff;
  }

  /* Social Media */
  .footer__social {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background: #007bff;
    transform: translateY(-2px);
  }

  /* Bottom Footer */
  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1rem 0;
  }

  .footer__bottom-container {
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer__copyright {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }

  .footer__payment-icons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .footer__payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .footer__payment-icon:hover {
    opacity: 1;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer__container {
      padding: 2rem var(--page-margin);
    }

    .footer__main {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .footer__newsletter-input-group {
      flex-direction: column;
      background: transparent;
      gap: 1rem;
    }

    .footer__newsletter-input {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 6px;
    }

    .footer__bottom-container {
      flex-direction: column;
      text-align: center;
    }

    .footer__social {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer__main {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
