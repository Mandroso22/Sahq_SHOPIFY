  "name": "t:general.footer",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.newsletter.header"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "t:sections.footer.settings.show_newsletter.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.menus.header"
    },
    {
      "type": "link_list",
      "id": "company_menu",
      "label": "t:sections.footer.settings.company_menu.label"
    },
    {
      "type": "link_list",
      "id": "customer_service_menu",
      "label": "t:sections.footer.settings.customer_service_menu.label"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "t:sections.footer.settings.legal_menu.label"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.social.header"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "t:sections.footer.settings.show_social_icons.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.payment.header"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:sections.footer.settings.show_payment_icons.label",
      "default": true
    }
  ]
}
{% endschema %}
